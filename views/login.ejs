<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700&display=swap"
      rel="stylesheet"
    />
    <script src="/clientLogin.js" defer></script>
    <script
      src="https://kit.fontawesome.com/bc308bbd0b.js"
      crossorigin="anonymous"
    ></script>
    <title>Login</title>
  </head>
  <body>
    <div class="login">
      <div class="login-head container">
        <h2>
          E<span class="blue-accent">Chat <i class="far fa-comment"></i></span>
        </h2>
        <div class="login-head-design">
          <svg
            width="114"
            height="267"
            viewBox="0 0 114 267"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect
              width="177.121"
              height="169.075"
              rx="10"
              transform="matrix(0.844093 0.536197 -0.665348 0.746534 108.667 5.10919)"
              fill="#458CFF"
            />
            <rect
              opacity="0.5"
              width="177.121"
              height="169.075"
              rx="10"
              transform="matrix(0.844093 0.536197 -0.665348 0.746534 117.493 45.8082)"
              fill="#BBE1FA"
            />
          </svg>
        </div>
      </div>
      <form class="form" id="login-form" action="/login" method="POST">
        <div class="form-body container">
          <div class="login-form-head">
            <h2>Login</h2>
          </div>
          <div class="input-fields">
            <div class="field" id="username-field">
              <label for="username">Username</label>
              <input type="text" name="username" id="username" />
            </div>
            <div class="field" id="password-field">
              <label for="password">Password</label>
              <input type="text" name="password" id="password" />
            </div>
          </div>
        </div>
        <div class="to-signup container">
          <p>Don't have an account?</p>
          <a href="/signup">Signup</a>
        </div>
        <div id="error-field">
          <p><%= error %></p>
        </div>
        <div class="submit container">
          <button type="submit" id="login-btn" class="action-btn">
            <a href="#">Log in</a>
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
